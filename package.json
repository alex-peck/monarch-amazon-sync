{
  "name": "monarch-amazon-sync",
  "version": "0.2.0",
  "description": "Browser extension to sync Amazon order data to Monarch transactions.",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build-and-zip": "pnpm build && rm -f chrome-monarch-amazon-sync.zip && cd dist && zip -r ../chrome-monarch-amazon-sync.zip .",
    "build-and-zip:firefox": "pnpm build:firefox && rm -f firefox-monarch-amazon-sync.zip && cd dist && zip -r ../firefox-monarch-amazon-sync.zip .",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install",
    "release": "dotenv release-it"
  },
  "type": "module",
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "construct-style-sheets-polyfill": "3.1.0",
    "csv-stringify": "^6.4.5",
    "flowbite-react": "^0.7.2",
    "promise-parallel-throttle": "^3.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "11.1.5",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.251",
    "@types/node": "20.8.10",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.14",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.9.1",
    "@vitejs/plugin-react": "4.2.0",
    "autoprefixer": "^10.4.17",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.53.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.33",
    "prettier": "3.1.0",
    "release-it": "^17.0.1",
    "rollup": "4.3.0",
    "sass": "1.74.1",
    "tailwindcss": "^3.4.1",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "5.0.0",
    "vitest": "^0.34.6",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2"
}
